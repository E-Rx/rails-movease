<div class="navbar">
  <div class="logo">
    <i class="fa-solid fa-rocket rocket"></i>
  </div>
  <div>
    <style>
      @import url('https://fonts.googleapis.com/css2?family=Cherry+Bomb+One&display=swap');
    </style>
    <h3 class="navbar-mooveas">Movease</h3>
  </div>
  <div class="links">
    <input type="checkbox" id="menu-toggle" class="menu-toggle">
    <label for="menu-toggle" class="menu-link">Menu</label>
    <% if user_signed_in? %>
      <% if current_user.avatar.attached? %>
        <%= cl_image_tag current_user.avatar.key, height: 50, width: 50, crop: :fill, class: "custom-rounded" %>
      <% end %>
    <% end %>
    <div class="dropdown-menu">
      <% if user_signed_in? %>
         <%= link_to 'Sign in', user_session_path %>

 <%= link_to 'Sign out', destroy_user_session_path, data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'} %>
      <% else %>
        <%= link_to 'Sign in', user_session_path %>
        <%= link_to 'Sign up', new_user_registration_path %>
      <% end %>
    </div>
  </div>
</div>



