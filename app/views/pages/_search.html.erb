<div id="vehicules">
  <% if @vehicules.any? %>
    <%= render 'card', vehicules: @vehicules %>
  <% else %>
    <em>Sorry, no vehicules found.</em>
  <% end %>
</div>

<div class="row justify-content-center">
  <div class="col-sm-8 my-3">
    <%= form_with url: root_path, method: :get, class: "d-flex" do %>
      <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Find by name or category"
        %>
      <%= submit_tag "Search", name: "", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
