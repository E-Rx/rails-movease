      <div class="search-bar">
        <%= form_with url: root_path, method: :get, class: "d-flex search-bar" do %>
          <%= text_field_tag :query,
                params[:query],
                class: "form-control",
                placeholder: "Find by name or category"
            %>
          <%= submit_tag "Search", name: "", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
