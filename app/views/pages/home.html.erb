          </div>
          <%= link_to "Land", root_path(query: 'terrestre') %>
        </div>
      <div class="filter flex">
        <div class="iconfilter flex">
          <i class="fa-solid fa-anchor"></i>
        </div>
          <%= link_to "Maritime", root_path(query: 'maritime') %>
      </div>
      <div class="filter flex">
        <div class="iconfilter flex">
          <i class="fa-regular fa-hand-spock"></i>
        </div>
           <%= link_to "Multi-purpose", root_path(query: 'multi-tache') %>
