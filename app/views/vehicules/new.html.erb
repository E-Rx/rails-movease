<h1>Ajoute ton super vehicule</h1>

 <%= simple_form_for @vehicule do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  <%= f.input   :name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "Vehicules name" } %>
    <%= f.input :description,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "Add a description" } %>
    <%= f.input :price,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "Price" } %>
    <%= f.input :pictures, as: :file,
                required: false,
                input_html: { autocomplete: "Your vehicules picture", multiple: true } %>
    <%= f.input :category_id, collection: Category.pluck(:name, :id) %>

  </div>
  <div class="form-actions">
    <%= f.button :submit, "Save" %>
  </div>
<% end %>
