<h1>Ajoute un super vehicule</h1>

 <%= simple_form_for @vehicule do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  <%= f.input   :name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "Vehicules name" } %>
    <%= f.input :description,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "Add a description" } %>
    <%= f.input :price,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "Price" } %>
    <%= f.input :picture, as: :file,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "Your vehicules picture" } %>
    <%= f.input :category, collection: Category.all %>

  </div>

  <div class="form-actions">
    <%= f.button :submit, "Save" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
