<h1>Ajoute ton vehicule d'exception</h1>

 <%= simple_form_for @vehicule do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  <%= f.input   :name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "name" } %>
    <%= f.input :description,
                required: true,
                input_html: { autocomplete: "description" } %>
    <%= f.input :price,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "Price" } %>
    <%= f.input :address,
                required: true,
                autofocus: true,
                input_html: {data: {address_autocomplete_target: "address"}, class: "d-none"},
                wrapper_html: {data: {controller: "address-autocomplete", address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}} %>
    <%= f.input :pictures, as: :file,
                required: true,
                input_html: { autocomplete: "pictures", multiple: true } %>
    <%= f.input :category_id, collection: Category.pluck(:name, :id) %>

  </div>
  <div class="form-actions">
    <%= f.button :submit, "Sauvegarder" %>
  </div>
<% end %>
